<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="Turning Point"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center" />
        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"/>
        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="logout"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="406dp"
                android:layout_height="215dp"
                app:srcCompat="@drawable/road"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="편리"
                    android:textColor="@color/red"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한 투자,"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="똑똑"
                    android:textColor="@color/red"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한 투자"
                    android:textSize="40dp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp">
                <com.skydoves.elasticviews.ElasticButton
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button"
                    android:drawableBottom="@drawable/disclosure"
                    android:paddingBottom="5dp"
                    android:text="뉴스/공시"
                    android:layout_marginRight="10dp"/>
                <com.skydoves.elasticviews.ElasticButton
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button"
                    android:drawableBottom="@drawable/overview2"
                    android:paddingBottom="5dp"
                    android:text="종목개요"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <com.skydoves.elasticviews.ElasticButton
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button"
                    android:drawableBottom="@drawable/prediction3"
                    android:paddingBottom="5dp"
                    android:text="예측"
                    android:layout_marginRight="10dp"/>
                <com.skydoves.elasticviews.ElasticButton
                    android:id="@+id/button4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/button"
                    android:drawableBottom="@drawable/ranking"
                    android:paddingBottom="5dp"
                    android:text="랭킹"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
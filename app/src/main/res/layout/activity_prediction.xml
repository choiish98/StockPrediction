<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Prediction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/go_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="홈"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"></Button>
        <Button
            android:id="@+id/go_disclosure"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="뉴스/공시"
            android:background="@drawable/button"></Button>
        <Button
            android:id="@+id/go_overview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="종목 개요"
            android:background="@drawable/button"></Button>
        <Button
            android:id="@+id/go_notification"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="랭킹"
            android:background="@drawable/button"></Button>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="종목 검색"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ic_rectangle">

                    <EditText
                        android:id="@+id/edittext"
                        android:layout_width="305dp"
                        android:layout_height="43dp"
                        android:hint="종목 검색"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        app:srcCompat="?android:attr/actionModeWebSearchDrawable"
                        tools:targetApi="lollipop" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/searchRecylcerview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"></androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:id="@+id/prediction_lineChart"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>


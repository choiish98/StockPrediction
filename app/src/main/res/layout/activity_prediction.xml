<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Prediction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/go_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="홈"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"></com.skydoves.elasticviews.ElasticButton>
        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/go_disclosure"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="뉴스/공시"
            android:background="@drawable/button"></com.skydoves.elasticviews.ElasticButton>
        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/go_overview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="종목 개요"
            android:background="@drawable/button"></com.skydoves.elasticviews.ElasticButton>
        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/go_notification"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="랭킹"
            android:background="@drawable/button"></com.skydoves.elasticviews.ElasticButton>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="종목 검색"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ic_rectangle">

                    <EditText
                        android:id="@+id/edittext"
                        android:layout_width="305dp"
                        android:layout_height="43dp"
                        android:hint="종목 검색"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        app:srcCompat="?android:attr/actionModeWebSearchDrawable"
                        tools:targetApi="lollipop" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/searchRecylcerview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:id="@+id/prediction_lineChart"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/invest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="모의 투자"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp">
                    <Button
                        android:id="@+id/buy_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button"
                        android:text="매수"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/sell_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button"
                        android:layout_margin="5dp"
                        android:text="매도"/>
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/table_outside">

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/point_text"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/talbe_inside_block"
                            android:gravity="center"
                            android:text="보유 포인트"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/point"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_inside"
                            android:gravity="center"
                            android:text="1000000"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/now_price_text"
                            android:layout_width="0dp"
                            android:layout_weight="1.2"
                            android:layout_height="40dp"
                            android:background="@drawable/talbe_inside_block"
                            android:gravity="center"
                            android:text="현재가"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/now_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_inside"
                            android:gravity="center"
                            android:text="80000"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/amount_text"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/talbe_inside_block"
                            android:gravity="center"
                            android:text="수량"
                           android:textSize="18sp" />

                        <EditText
                            android:id="@+id/amount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_inside"
                            android:gravity="center"
                            android:text=""
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/total_text"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:background="@drawable/talbe_inside_block"
                            android:gravity="center"
                            android:text="총 주문 금액"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_inside"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="18sp" />
                    </TableRow>
                </TableLayout>

                <Button
                    android:id="@+id/order_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button"
                    android:text="매수하기"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="내 보유 주식"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stockRecylcerview"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>